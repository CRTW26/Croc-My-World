<body class="posts-view">
<p class="new-post">
<%= link_to new_post_path do %>
  New post
<% end %>
</p>
<%= flash[:notice]%>
<div class="viewing">
<% @posts.each do |post| %>
  <p class='message'><%= post.message %><br>
  posted by: <%= post.user.name%> <br>
  <%= post.created_at %> <br>
  <%likes = "#{post.likes.count.to_s}" + " #{post.likes.count ==1 ? 'Like' : 'Likes'}"%>
  <%= button_to "#{likes}", post_likes_path(post), method: :post %>
  
  <%= link_to "Edit", edit_post_path(post)%> 
  <%= link_to "Show", post_path(post)%> 
  <%= link_to 'Delete', post_path(post), :method => :delete %>
    <% post.comments.each do |comment| %> <br>
    
      <%= comment.comment %>
      Posted by:
       <%= comment.user.name%>
       <%= link_to 'Edit Comment', edit_comment_path(comment) %>
       <%= link_to 'Delete Comment', comment_path(comment), :method => :delete %>
    <% end %>
  </p>
 
<% end %>
</div>
</body>

